// Zed keymap
//
// For information on binding keys, see the Zed
// documentation: https://zed.dev/docs/key-bindings
//
// To see the default key bindings run `zed: open default keymap`
// from the command palette.
[
    {
        "context": "Workspace",
        "bindings": {
            // "shift shift": "file_finder::Toggle"
        },
    },
    {
        "context": "Editor && vim_mode == insert",
        "bindings": {
            // "j k": "vim::NormalBefore"
            "ctrl-l": "editor::MoveRight",
            "ctrl-h": "editor::MoveLeft",
            "ctrl-j": "editor::MoveDown",
            "ctrl-k": "editor::MoveUp",
            "alt-h": "editor::MoveToBeginningOfLine",
            "alt-l": "editor::MoveToEndOfLine",
        },
    },
    {
        "context": "Editor",
        "bindings": {
            "shift-alt-f": "editor::Format",
            "ctrl-\\": "pane::SplitRight",
            "ctrl-alt-\\": "pane::SplitDown",
        },
    },
    {
        "context": "Editor && mode == full && !menu",
        "bindings": {
            "alt-0": "editor::SwitchSourceHeader",
        },
    },
    {
        "bindings": {
            "secondary-k p": "workspace::ToggleLeftDock",
            "secondary-k r": "workspace::ToggleRightDock",
            "secondary-k a": "agent::ToggleFocus",
            "secondary-k t": "terminal_panel::Toggle",
            "secondary-k secondary-p": "workspace::ToggleLeftDock",
            "secondary-k secondary-r": "workspace::ToggleRightDock",
            "secondary-k secondary-a": "agent::ToggleFocus",
            "secondary-k secondary-t": "terminal_panel::Toggle",
        },
    },
]

